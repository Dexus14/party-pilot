<%- include('partials/head', {title: 'Homepage'}) %>
<body>
    <div class="col-xs-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4"
    style="height: 100%;"
    >
        <h1 style="position: fixed; left: 0; top: 15vh; font-size: 3rem; text-align: center; width: 100%">Party pilot <i class="bi bi-speaker"></i></h1>

        <div style="height: 100%;" class="d-flex flex-column align-items-center justify-content-center">
            <% if (error !== '') { %>
                <div style="width: 80%;" class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>


            <% if (success !== '') { %>
                <div style="width: 80%;" class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>

            <a style="width: 80%;" class="mb-3" href="/room/auth/spotify">
                <button style="width: 100%; height: 10vh;" class="btn btn-lg btn-primary">
                    Create room
                </button>
            </a>

            <a style="width: 80%;" class="mb-3" href="/room/join">
                <button style="width: 100%; height: 10vh;" class="btn btn-lg btn-outline-primary">
                    Join room
                </button>
            </a>

            <a style="width: 80%;" href="/room/auth/spotify?destroy=1">
                <button style="width: 100%; height: 10vh;" class="btn btn-lg btn-outline-danger">
                    Destroy room
                </button>
            </a>
        </div>
    </div>

<%- include('partials/footer') %>
