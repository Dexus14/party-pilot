<%- include('partials/head', {title: 'Join room'}) %>
<body>
<div class="col-xs-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3"
     style="height: 100%;"
>
    <div style="height: 100%;" class="d-flex flex-column align-items-center justify-content-center">
        <form style="width: 80%" method="post">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="username" placeholder="Username" name="username">
                <label for="username">Username</label>
            </div>
            <div class="form-floating mb-4">
                <input type="text" class="form-control" id="roomId" placeholder="Room ID" name="roomId">
                <label for="roomId">Room ID</label>
            </div>

            <button type="submit" style="width: 100%; height: 10vh;" class="btn btn-lg btn-primary mb-3">
                Join room
            </button>

            <a style="width: 50%;" href="/">
                <button type="button" style="width: 100%; height: 10vh;" class="btn btn-lg btn-outline-primary">
                    Back
                </button>
            </a>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
